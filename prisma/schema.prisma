generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url      = env("DATABASE_URL")
    directUrl = env("PRISMA_DATABASE_URL")
}

model Lead {
    id        Int      @id @default(autoincrement())
    name      String   
    email     String   @unique @db.VarChar
    telefone  String
    createdAt DateTime @default(now())
    status    Status   @default(NEW)
}

enum Status {
    NEW
    IN_CONTACT
    WON
}

